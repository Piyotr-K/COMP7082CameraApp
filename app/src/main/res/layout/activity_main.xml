<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.server.cameraapp.MainActivity">

    <LinearLayout
        android:id="@+id/linear_display"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:layout_alignParentTop="true"
        android:layout_above="@id/linear_caption_box"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/ivMain"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_launcher"

            android:adjustViewBounds="true"
            android:maxWidth="42dp"
            android:maxHeight="42dp"
            android:scaleType="fitXY"/>
        <TextView
            android:text="test date: 2011-07-25"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_caption_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnLeft"
        android:layout_alignParentStart="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sample Text"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/entry_caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter A Caption Here..." />

        <Button
            android:id="@+id/btnCaption"
            android:text="Enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <Button
        android:id="@+id/btnLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="left"
        android:layout_marginBottom="50dp"
        android:layout_above="@+id/btnSnap"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp" />


    <Button
        android:id="@+id/btnRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="right"
        android:layout_alignBaseline="@+id/btnLeft"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"/>

    <Button
        android:id="@+id/btnSnap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="snap"
        android:onClick="takePicture"
        android:layout_marginBottom="29dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btnLeft" />

    <Button
        android:id="@+id/btnFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="filter"
        android:layout_marginEnd="10dp"
        android:layout_alignBaseline="@+id/btnSnap"
        android:layout_alignBottom="@+id/btnSnap"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
